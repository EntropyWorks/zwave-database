<?xml version="1.0" encoding="utf-8"?>
<Product>
  <Model>FGSS001</Model>
  <Label lang="en">Smoke Sensor</Label>

  <Configuration>

    <Parameter>
      <Index>1</Index>
      <Label lang="en">Alarm Cancellation Delay</Label>
      <Type>short</Type>
      <Default>0</Default>
      <Minimum>0</Minimum>
      <Maximum>3600</Maximum>
      <Size>2</Size>
    </Parameter>

    <Parameter>
      <Index>2</Index>
      <Label lang="en">Acoustic and visual signals On / Off in case of alarm</Label>
      <Type>list</Type>
      <Default>3</Default>
      <Minimum>0</Minimum>
      <Maximum>65535</Maximum>
      <Size>1</Size>
      <Item>
        <Value>0</Value>
        <Label lang="en">acoustic and visual alarms inactive</Label>
      </Item>
      <Item>
        <Value>1</Value>
        <Label lang="en">acoustic alarm inactive, visual alarm active</Label>
      </Item>
      <Item>
        <Value>2</Value>
        <Label lang="en">acoustic alarm active, visual alarm inactive</Label>
      </Item>
      <Item>
        <Value>3</Value>
        <Label lang="en">acoustic and visual alarms active</Label>
      </Item>
    </Parameter>

    <Parameter>
      <Index>5</Index>
      <Label lang="en">Type of alarm frame sent to 1-st association group (SMOKE)</Label>
      <Type>list</Type>
      <Default>-127</Default>
      <Minimum>0</Minimum>
      <Maximum>65535</Maximum>
      <Size>1</Size>
      <Item>
        <Value>-127</Value>
        <Label lang="en">BASIC_SET</Label>
      </Item>
      <Item>
        <Value>0</Value>
        <Label lang="en">ALARM SENSOR (SMOKE)</Label>
      </Item>
    </Parameter>

    <Parameter>
      <Index>7</Index>
      <Label lang="en">Forced Level of Dimming group 1</Label>
      <Type>short</Type>
      <Default>255</Default>
      <Minimum>1</Minimum>
      <Maximum>255</Maximum>
      <Size>1</Size>
    </Parameter>

    <Parameter>
      <Index>10</Index>
      <Label lang="en">Interval between successive readings of temperature sensors</Label>
      <Type>short</Type>
      <Default>300</Default>
      <Minimum>1</Minimum>
      <Maximum>32767</Maximum>
      <Size>2</Size>
    </Parameter>

    <Parameter>
      <Index>12</Index>
      <Label lang="en">Insensitiveness to temperature changes.</Label>
      <Type>short</Type>
      <Default>20</Default>
      <Minimum>0</Minimum>
      <Maximum>100</Maximum>
      <Size>1</Size>
    </Parameter>

    <Parameter>
      <Index>13</Index>
      <Label lang="en">Transmitting the alarm or control frame broadcast mode</Label>
      <Type>list</Type>
      <Default>0</Default>
      <Minimum>0</Minimum>
      <Maximum>65535</Maximum>
      <Size>1</Size>
      <Item>
        <Value>0</Value>
        <Label lang="en">Broadcast inactive</Label>
      </Item>
      <Item>
        <Value>1</Value>
        <Label lang="en">Smoke broadcast mode active, Tamper broadcast mode inactive</Label>
      </Item>
      <Item>
        <Value>2</Value>
        <Label lang="en">Smoke broadcast mode inactive, Tamper broadcast mode active</Label>
      </Item>
      <Item>
        <Value>3</Value>
        <Label lang="en">Smoke and Tamper broadcast mode active</Label>
      </Item>
    </Parameter>

    <Parameter>
      <Index>73</Index>
      <Label lang="en">Temperature measurement compensation</Label>
      <Type>short</Type>
      <Default>0</Default>
      <Minimum>-1000</Minimum>
      <Maximum>1000</Maximum>
      <Size>2</Size>
    </Parameter>

    <Parameter>
      <Index>80</Index>
      <Label lang="en">Z-Wave range test interval</Label>
      <Type>short</Type>
      <Default>1</Default>
      <Minimum>0</Minimum>
      <Maximum>65535</Maximum>
      <Size>1</Size>
    </Parameter>

    <Parameter>
      <Index>81</Index>
      <Label lang="en">Temperature alarm threshold</Label>
      <Type>short</Type>
      <Default>54</Default>
      <Minimum>0</Minimum>
      <Maximum>65535</Maximum>
      <Size>1</Size>
    </Parameter>

    <Parameter>
      <Index>82</Index>
      <Label lang="en">Smoke Sensor sensitivity</Label>
      <Type>list</Type>
      <Default>2</Default>
      <Minimum>0</Minimum>
      <Maximum>65535</Maximum>
      <Size>1</Size>
      <Item>
        <Value>1</Value>
        <Label lang="en">High</Label>
      </Item>
      <Item>
        <Value>2</Value>
        <Label lang="en">Medium</Label>
      </Item>
      <Item>
        <Value>3</Value>
        <Label lang="en">Low</Label>
      </Item>
    </Parameter>

    <Parameter>
      <Index>83</Index>
      <Label lang="en">Black Box sensitivity level</Label>
      <Type>list</Type>
      <Default>0</Default>
      <Minimum>0</Minimum>
      <Maximum>65535</Maximum>
      <Size>1</Size>
      <Item>
        <Value>1</Value>
        <Label lang="en">High</Label>
      </Item>
      <Item>
        <Value>2</Value>
        <Label lang="en">Medium</Label>
      </Item>
      <Item>
        <Value>3</Value>
        <Label lang="en">Low</Label>
      </Item>
    </Parameter>

    <Parameter>
      <Index>84</Index>
      <Label lang="en">Malfunction alarm</Label>
      <Type>short</Type>
      <Default>10</Default>
      <Minimum>-126</Minimum>
      <Maximum>127</Maximum>
      <Size>1</Size>
    </Parameter>

    <Parameter>
      <Index>85</Index>
      <Label lang="en">Temperature alarm</Label>
      <Type>short</Type>
      <Default>5</Default>
      <Minimum>-126</Minimum>
      <Maximum>127</Maximum>
      <Size>1</Size>
    </Parameter>

    <Parameter>
      <Index>86</Index>
      <Label lang="en">Lack of the Z-Wave range alarm</Label>
      <Type>short</Type>
      <Default>360</Default>
      <Minimum>1</Minimum>
      <Maximum>17280</Maximum>
      <Size>2</Size>
    </Parameter>

    <Parameter>
      <Index>87</Index>
      <Label lang="en">Low battery alarm</Label>
      <Type>short</Type>
      <Default>360</Default>
      <Minimum>1</Minimum>
      <Maximum>17280</Maximum>
      <Size>2</Size>
    </Parameter>

    <Parameter>
      <Index>88</Index>
      <Label lang="en">Temperature measurement compensation for report</Label>
      <Type>list</Type>
      <Default>0</Default>
      <Minimum>0</Minimum>
      <Maximum>65535</Maximum>
      <Size>1</Size>
      <Item>
        <Value>0</Value>
        <Label lang="en">Ignore temperature compensation</Label>
      </Item>
      <Item>
        <Value>1</Value>
        <Label lang="en">Include temperature compensation</Label>
      </Item>
    </Parameter>

    <Parameter>
      <Index>89</Index>
      <Label lang="en">Tamper alarm</Label>
      <Type>list</Type>
      <Default>1</Default>
      <Minimum>0</Minimum>
      <Maximum>65535</Maximum>
      <Size>1</Size>
      <Item>
        <Value>0</Value>
        <Label lang="en">Tamper alarm inactive</Label>
      </Item>
      <Item>
        <Value>1</Value>
        <Label lang="en">Tamper alarm active, with cancellation option available</Label>
      </Item>
      <Item>
        <Value>2</Value>
        <Label lang="en">Tamper alarm active, without cancellation option</Label>
      </Item>
    </Parameter>

  </Configuration>

  <Associations>

    <Group>
      <Index>1</Index>
      <Label lang="en">Fire Status</Label>
      <Maximum>5</Maximum>
    </Group>

    <Group>
      <Index>2</Index>
      <Label lang="en">TMP Button</Label>
      <Maximum>5</Maximum>
    </Group>

    <Group>
      <Index>3</Index>
      <Label lang="en">Device Status</Label>
      <Maximum>1</Maximum>
      <SetToController>true</SetToController>
    </Group>

  </Associations>

</Product>

